<?xml version="1.0" encoding="utf-8"?>
<manifest>
    <control namespace="HR"
             constructor="Collapsible"
             version="0.0.8"
             display-name-key="Collapsible"
             description-key="Collapsible description"
             control-type="virtual">
        <!-- external-service-usage node declares whether this 3rd party PCF control is using external service or not, if yes, this control will be considered as premium and please also add the external domain it is using.
    If it is not using any external service, please set the enabled="false" and DO NOT add any domain below. The "enabled" will be false by default.
    Example1:
      <external-service-usage enabled="true">
        <domain>www.Microsoft.com</domain>
      </external-service-usage>
    Example2:
      <external-service-usage enabled="false">
      </external-service-usage> -->
        <external-service-usage enabled="false">
            <!-- UNCOMMENT TO ADD EXTERNAL DOMAINS
      <domain></domain>
      <domain></domain> -->
        </external-service-usage>
        <!-- property node identifies a specific, configurable piece of data that the control expects from CDS -->
        <property name="collapsibleToggle"
                  display-name-key="collapsed"
                  description-key="collapsed"
                  of-type="TwoOptions"
                  usage="bound"
                  required="true" />
        <property name="collapsedByDefault"
                  display-name-key="collapsedByDefault"
                  description-key="this will overide the bound value and will always collapse even if the bound value changes? "
                  of-type="TwoOptions"
                  usage="input"
                  default-value="true" />
        <property name="fieldLogicalNames"
                  display-name-key="fieldLogicalNames"
                  description-key="Comma separated (e.g accountid, name) Logical name of field(s) to hide/show.  Currently, I use a deprecated Xrm.page blah blah... So, if I fail in the future, please use onChange event"
                  of-type="Multiple"
                  usage="input" />
        <property name="label"
                  display-name-key="label"
                  description-key="what should show as the label? "
                  of-type="SingleLine.Text"
                  usage="input"
                  required="true"
                  default-value="Collapsible Label" />
        <property name="textColor"
                  display-name-key="textColor"
                  description-key="I can be any color as text or #hex but please, make me accessible "
                  of-type="SingleLine.Text"
                  usage="input"
                  default-value="black" />
        <property name="backgroundColor"
                  display-name-key="backgroundColor"
                  description-key="I can be any color as text or #hex but please, make me accessible "
                  of-type="SingleLine.Text"
                  usage="input"
                  default-value="white" />
        <property name="hoverColor"
                  display-name-key="hoverColor"
                  description-key="I can be any color as text or #hex but please, make me accessible "
                  of-type="SingleLine.Text"
                  usage="input"
                  default-value="#f7f7f7" />
        <property name="textSize"
                  display-name-key="textSize"
                  description-key="textSize"
                  of-type="Whole.None"
                  usage="input"
                  default-value="14" />
        <property name="textWeight"
                  display-name-key="textWeight"
                  description-key="I can be any weith: bold, normal, etc. but please, make me accessible "
                  of-type="SingleLine.Text"
                  usage="input"
                  default-value="normal" />
        <property name="textPadding"
                  display-name-key="textPadding"
                  description-key="how should I be padded? in short hand top-padding right-padding bottom-padding left-padding "
                  of-type="SingleLine.Text"
                  usage="input"
                  default-value="10px 10px" />
        <property name="leftIcon"
                  display-name-key="leftIcon"
                  description-key="leftIcon "
                  of-type="SingleLine.Text"
                  usage="input" />
        <property name="outputValue"
                  display-name-key="outputValue"
                  description-key="I am not so crucial. But I could be useful for you"
                  of-type="TwoOptions"
                  usage="output" />
        <resources>
            <code path="index.ts"
                  order="1" />
            <platform-library name="React"
                              version="16.8.6" />
            <platform-library name="Fluent"
                              version="8.29.0" />
            <!-- UNCOMMENT TO ADD MORE RESOURCES
      <css path="css/Collapsible.css" order="1" />
      <resx path="strings/Collapsible.1033.resx" version="1.0.0" /> -->
        </resources>
        <!-- UNCOMMENT TO ENABLE THE SPECIFIED API
    <feature-usage>
      <uses-feature name="Device.captureAudio" required="true" />
      <uses-feature name="Device.captureImage" required="true" />
      <uses-feature name="Device.captureVideo" required="true" />
      <uses-feature name="Device.getBarcodeValue" required="true" />
      <uses-feature name="Device.getCurrentPosition" required="true" />
      <uses-feature name="Device.pickFile" required="true" />
      <uses-feature name="Utility" required="true" />
      <uses-feature name="WebAPI" required="true" />
    </feature-usage> -->
    </control>
</manifest>