<?xml version="1.0" encoding="utf-8"?>
<manifest>
    <control namespace="HR"
             constructor="Collapsible"
             version="0.0.20"
             display-name-key="Collapsible"
             description-key="Collapsible description"
             control-type="virtual">
        <external-service-usage enabled="false" />
        <property name="collapsibleToggle"
                  display-name-key="collapsed"
                  description-key="collapsed"
                  of-type="TwoOptions"
                  usage="bound"
                  required="true" />
        <property name="fieldLogicalNames"
                  display-name-key="fieldLogicalNames"
                  description-key="Comma separated (e.g accountid, name) Logical name of field(s) to hide/show.  Currently, I use a deprecated Xrm.page blah blah... So, if I fail in the future, please use onChange event"
                  of-type="Multiple"
                  usage="input" />
        <property name="label"
                  display-name-key="label"
                  description-key="what should show as the label? "
                  of-type="SingleLine.Text"
                  usage="input"
                  required="true"
                  default-value="Collapsible Label" />
        <property name="textColor"
                  display-name-key="textColor"
                  description-key="I can be any color as text or #hex but please, make me accessible "
                  of-type="SingleLine.Text"
                  usage="input"
                  default-value="black" />
        <property name="backgroundColor"
                  display-name-key="backgroundColor"
                  description-key="I can be any color as text or #hex but please, make me accessible "
                  of-type="SingleLine.Text"
                  usage="input"
                  default-value="white" />
        <property name="hoverColor"
                  display-name-key="hoverColor"
                  description-key="I can be any color as text or #hex but please, make me accessible "
                  of-type="SingleLine.Text"
                  usage="input"
                  default-value="#f7f7f7" />
        <property name="textSize"
                  display-name-key="textSize"
                  description-key="textSize"
                  of-type="Whole.None"
                  usage="input"
                  default-value="14" />
        <property name="textWeight"
                  display-name-key="textWeight"
                  description-key="I can be any weith: bold, normal, etc. but please, make me accessible "
                  of-type="SingleLine.Text"
                  usage="input"
                  default-value="normal" />
        <property name="textPadding"
                  display-name-key="textPadding"
                  description-key="how should I be padded? in short hand top-padding right-padding bottom-padding left-padding "
                  of-type="SingleLine.Text"
                  usage="input"
                  default-value="10px 10px" />
        <property name="leftIcon"
                  display-name-key="leftIcon"
                  description-key="leftIcon "
                  of-type="SingleLine.Text"
                  usage="input" />
        <property name="outputValue"
                  display-name-key="outputValue"
                  description-key="I am not so crucial. But I could be useful for you"
                  of-type="TwoOptions"
                  usage="output" />
        <resources>
            <code path="index.ts"
                  order="1" />
            <platform-library name="React"
                              version="16.8.6" />
            <platform-library name="Fluent"
                              version="8.29.0" />
        </resources>
    </control>
</manifest>